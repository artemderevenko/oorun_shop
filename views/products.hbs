<section id="products">
  <div class="products-list">

    {{#if lamps.length}}
      <h2 class="title-section">світильники</h2>
      {{#each lamps}}
        {{> product-preview}}
      {{/each}}
    {{/if}}

    {{#if pots.length}}
      <h2 class="title-section">кашпо для рослин</h2>
      {{#each pots}}
        {{> product-preview}}
      {{/each}}
    {{/if}}

    {{#if candles.length}}
      <h2 class="title-section">свічки</h2>
      {{#each candles}}
        {{> product-preview}}
      {{/each}}
    {{/if}}

  </div>
</section>