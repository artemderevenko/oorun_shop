<section>
  <div class="wrap">
    <h2 class="title-section">Реєстрація</h2>
    <div class="form-wrapper">

      <form class="form" action="/auth/register" method="POST">
        <input type="hidden" name="_csrf" value="{{ @root.csrf }}" />
        <input name="email" id="email" type="email" value="{{ data.email }}" placeholder="Електронна пошта" required>
        <input name="name" id="name" type="text" value="{{ data.name }}" placeholder="Ім'я" required>
        <input name="password" id="password" type="password" value="{{ data.password }}" placeholder="Пароль" required>
        <input name="confirm" id="confirm" type="password" value="{{ data.confirm }}" placeholder="Повтор пароля" required>
        <button type="submit" class="button buy">
          <div class="transition-06 button-content">
            Зареєструватися
          </div>
        </button>
      </form>

      <div class="auth-redirect">
        <div>Вже маєте обліковий запис?</div>
        <a href="/auth/login" class="auth-link transition">
          Авторизируйтесь.
        </a>
      </div>
    </div>
  </div>
</section>

{{#if registerError}}
<div class="notify error">
  <p>{{ registerError }}</p>
</div>
{{/if}}
